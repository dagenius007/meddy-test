{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": [
    "import",
    "jsx-a11y",
    "react",
    "react-hooks",
    "prettier",
    "@typescript-eslint"
  ],
  "extends": ["airbnb", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "camelcase": "off",
    "spaced-comment": "off",
    "no-console": "warn",
    "import/prefer-default-export": "off",
    "react/prop-types": "off",
    "no-param-reassign": "off",
    "no-use-before-define": "off",
    "react/button-has-type": "off",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["off"],
    "no-underscore-dangle": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "."
      }
    },
    "react": {
      "version": "detect"
    }
  }
}
